{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-var": [
      "error"
    ],
    "prettier/prettier": [
      "warn"
    ]
  }
}
